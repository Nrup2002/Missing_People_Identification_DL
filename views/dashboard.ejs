<style>
    /* Reset default margin and padding */
    body, h1, h2 {
        margin: 0;
        padding: 0;
    }

    /* Set a background color and text color */
    body {
        background-color: #f0f0f0;
        font-family: Arial, sans-serif;
        color: #3b3b3b;
    }

    /* Center the content in the middle of the page */
    div.container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: start;
        width: 100%;
    }

    /* Style the headings */
    h1 {
        font-size: 36px;
        transform: scale(1.1);
        transition: 0.8s;
    }

    h2 {
        font-size: 24px;
        transform: scale(1.1);
        transition: 0.8s;
    }

    /* Add spacing between elements */
    .group {
        display: flex;
        justify-content: space-evenly;
        height: fit-content;
        margin: 10px auto 0 auto;
        width: 100%;
    }

    .box {
        display: flex;
        justify-content: space-evenly;
        margin: 20px;
        width: 300px;
        padding: 30px;
        background-color: #fff;
        border: 1px solid #ddd; /* Light border */
        border-radius: 5px; /* Rounded corners */
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2); /* Box shadow for a subtle depth effect */
    }
    .icons i{
        font-size: 40px;
    }
    .icons{
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .box:hover{
        transform: scale(1.2);
        transition: 0.8s;
    }
    .box-1{
        background-color: rgb(255, 157, 157);
        width: 30%;
    }
    .box-2{
        background-color: rgb(255, 248, 154);
        width: 30%;
    }
    .box-3{
        background-color: rgb(173, 255, 175);
        width: 30%;
    }
    .box-4{
        background-color: rgb(255, 255, 255);
        width: 45%;
    }
    .box-5{
        background-color: rgb(255, 255, 255);
        width: 45%;
    }
    
    .box-6{
        background-color: rgb(30, 118, 23);
        color: #ddd;
    }



    /* Make it responsive for smaller screens */
    @media (max-width: 576px) {
    
        h1 {
            font-size: 24px;
        }
        h2 {
            font-size: 20px;
        }
        .group{
            flex-wrap: wrap;
            flex-direction: column;
            width: 100%;
        }
        .container{
            width: 100%;
            overflow: hidden;
        }
        .box{
            margin: 20px 0 ;
            width: 240px;
            display: flex;
            justify-content: center;
            font-size: 20px;
            flex-direction: column;
        }
        .box h1, .box h2{
            font-size: 26px;
            text-align: center;
            font-weight: 600;
        }
        .box-6{
            margin-bottom: 50px;
        }

    }
</style>

<div class="container">
    <h1>Dashboard</h1>
    
    <div class="group">
        <div class="box box-1">
            <div>
                <h2>Missing</h2>
                <h1> <%= totalMissingEntries %></h1>
            </div>
            <div class="icons">
                <i class="fa-solid fa-person-circle-exclamation"></i>
            </div>
        </div>
        <div class="box box-2">
            <div>
                <h2>Tracked</h2>
                <h1> <%= totalInformedEntries %></h1>
            </div>
            <div class="icons">
                <i class="fa-solid fa-location-pin"></i>
            </div>
        </div>
        <div class="box box-3">
            <div>
                <h2>Found</h2>
                <h1>0</h1>
            </div>
            <div class="icons">
                <i class="fa-solid fa-person-circle-plus"></i>
            </div>
        </div>
    </div>
    <div class="group">
        <div class="box box-4">
            <div>
                <h2>Missing Males</h2>
                <h1> <%= totalMaleEntries %></h1>
            </div>
            <div class="icons">
                <i class="fa-solid fa-mars"></i>
            </div>
        </div>
        <div class="box box-5">
            <div>
                <h2>Missing Females</h2>
                <h1> <%= totalFemaleEntries %></h1>
            </div>
            <div class="icons">
                <i class="fa-solid fa-venus"></i>
            </div>
        </div>
    </div>
    <div class="box box-6">
        <div>
            <h2 style="color: rgb(255, 255, 255);">Help from the app</h2>
            <% const informedPercent = totalInformedEntries / totalMissingEntries * 100 %>
            <h1 style="color: rgb(255, 255, 255);"><%= informedPercent.toFixed(1) %>%</h1>
        </div>
        <div class="icons">
            <i class="fa-solid fa-thumbs-up"></i>
        </div>
    </div>
</div>

